@{
    ViewData["Title"] = "Home - Student Helper";
}

<!-- Hero Section -->
<div class="text-center py-12">
    <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Your AI-Powered Math Companion
    </h1>
    <p class="text-xl text-gray-600 mb-8">
        Snap a photo, get instant solutions with step-by-step explanations
    </p>
    <div class="flex justify-center gap-4">
        <a asp-controller="Camera" asp-action="Index" 
           class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:shadow-lg transition flex items-center gap-2">
            <i data-lucide="camera" class="w-6 h-6"></i>
            Start Solving
        </a>
        <a asp-controller="Dashboard" asp-action="Index" 
           class="bg-white text-blue-600 px-8 py-4 rounded-xl text-lg font-semibold border-2 border-blue-600 hover:bg-blue-50 transition flex items-center gap-2">
            <i data-lucide="layout-dashboard" class="w-6 h-6"></i>
            View Dashboard
        </a>
    </div>
</div>

<!-- Features Grid -->
<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
    <!-- Camera Scan -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="camera" class="w-6 h-6 text-blue-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Camera Scan</h3>
        <p class="text-gray-600 mb-4">Snap a photo of any math problem and get instant solutions</p>
        <a asp-controller="Camera" asp-action="Index" class="text-blue-600 hover:text-blue-800 font-semibold">
            Try it now →
        </a>
    </div>

    <!-- Step-by-Step Solutions -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="list-ordered" class="w-6 h-6 text-purple-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Step-by-Step Solutions</h3>
        <p class="text-gray-600 mb-4">Understand every step with detailed explanations</p>
        <a asp-controller="Camera" asp-action="Index" class="text-purple-600 hover:text-purple-800 font-semibold">
            Learn more →
        </a>
    </div>

    <!-- Study Timer -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="timer" class="w-6 h-6 text-green-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Study Timer</h3>
        <p class="text-gray-600 mb-4">Track your study sessions with Pomodoro timer</p>
        <a asp-controller="Dashboard" asp-action="StudyTimer" class="text-green-600 hover:text-green-800 font-semibold">
            Start timer →
        </a>
    </div>

    <!-- AI Chat Tutor -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="message-circle" class="w-6 h-6 text-orange-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">AI Chat Tutor</h3>
        <p class="text-gray-600 mb-4">Ask questions and get instant AI-powered help</p>
        <a asp-controller="Chat" asp-action="Index" class="text-orange-600 hover:text-orange-800 font-semibold">
            Start chatting →
        </a>
    </div>

    <!-- Achievements -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="trophy" class="w-6 h-6 text-yellow-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Achievements</h3>
        <p class="text-gray-600 mb-4">Unlock badges and track your progress</p>
        <a asp-controller="Achievements" asp-action="Index" class="text-yellow-600 hover:text-yellow-800 font-semibold">
            View achievements →
        </a>
    </div>

    <!-- Daily Challenge -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="target" class="w-6 h-6 text-red-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Daily Challenge</h3>
        <p class="text-gray-600 mb-4">Complete daily challenges and maintain your streak</p>
        <a asp-controller="Challenge" asp-action="Index" class="text-red-600 hover:text-red-800 font-semibold">
            Today's challenge →
        </a>
    </div>

    <!-- Study Groups -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="users" class="w-6 h-6 text-indigo-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Study Groups</h3>
        <p class="text-gray-600 mb-4">Join study groups and learn together</p>
        <a asp-controller="StudyGroup" asp-action="Index" class="text-indigo-600 hover:text-indigo-800 font-semibold">
            Join groups →
        </a>
    </div>

    <!-- Flashcards -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="layers" class="w-6 h-6 text-pink-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Smart Flashcards</h3>
        <p class="text-gray-600 mb-4">Create and review flashcards with AI assistance</p>
        <a asp-controller="Flashcard" asp-action="Index" class="text-pink-600 hover:text-pink-800 font-semibold">
            Study flashcards →
        </a>
    </div>

    <!-- Study Buddy AI -->
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition">
        <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4">
            <i data-lucide="bot" class="w-6 h-6 text-teal-600"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">Study Buddy AI</h3>
        <p class="text-gray-600 mb-4">Get personalized study advice from AI</p>
        <a asp-controller="StudyBuddy" asp-action="Index" class="text-teal-600 hover:text-teal-800 font-semibold">
            Get advice →
        </a>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-white rounded-xl shadow-lg p-8 mt-12">
    <h2 class="text-3xl font-bold text-center mb-8">Your Learning Journey</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 mb-2">1000+</div>
            <div class="text-gray-600">Problems Solved</div>
        </div>
        <div class="text-center">
            <div class="text-4xl font-bold text-purple-600 mb-2">50+</div>
            <div class="text-gray-600">Study Hours</div>
        </div>
        <div class="text-center">
            <div class="text-4xl font-bold text-green-600 mb-2">15</div>
            <div class="text-gray-600">Achievements</div>
        </div>
        <div class="text-center">
            <div class="text-4xl font-bold text-orange-600 mb-2">7</div>
            <div class="text-gray-600">Day Streak</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
    </script>
}
